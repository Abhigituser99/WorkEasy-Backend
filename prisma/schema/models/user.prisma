model User {
  id             String   @id @default(uuid())
  email          String   @unique
  password       String
  name           String?
  role           Role     @default(CLIENT)
  country        String? // new: optional country
  age            Int? // new: optional age
  profilePicture String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@index([role])
}
